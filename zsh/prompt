prompt off
alias battery_percent="echo '['\$(acpi | grep -o '[CD]\|[[:digit:]]*%')'%]'"
alias speaker_volume="amixer get Master | grep -o '\[[[:digit:].-]*dB] \[[[:lower:]]*]'"
PROMPT='%1~ %# '
if [[ $GPG_TTY = /dev/tty*(#qN) ]]
then
	RPROMPT="%(?..%?   )\$(battery_percent)   \$(speaker_volume)   %*"
else
	RPROMPT='%(?..%?)'
fi
setopt prompt_subst
